# ===================================
# PHPinancia Environment Variables
# ===================================

# -----------------------------------
# Supabase Configuration (REQUIRED)
# -----------------------------------
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_URL=your_database_connection_string

# -----------------------------------
# Upstash Redis (REQUIRED for rate limiting & caching)
# -----------------------------------
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# -----------------------------------
# Authentication (REQUIRED)
# -----------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key
JWT_SECRET=your_jwt_secret_key
CSRF_SECRET=your_csrf_secret_key
ENCRYPTION_KEY=your_encryption_key_32_chars

# -----------------------------------
# Mistral AI (REQUIRED for AI insights)
# -----------------------------------
MISTRAL_API_KEY=your_mistral_api_key
MISTRAL_MODEL=mistral-small-2503

# -----------------------------------
# Sentry Error Tracking (OPTIONAL but recommended)
# -----------------------------------
# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# -----------------------------------
# Stripe Payment (OPTIONAL)
# -----------------------------------
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# -----------------------------------
# Email Service - Mailgun (OPTIONAL)
# -----------------------------------
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# -----------------------------------
# Application Configuration
# -----------------------------------
NEXT_PUBLIC_APP_NAME=PHPinancia
# IMPORTANT: Set this to your production URL (e.g., https://yourapp.com)
# This is used for email confirmation links, password reset links, and OAuth redirects
# For local development: http://localhost:3000
# For production: https://your-production-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_DATE_FORMAT=MM/dd/yyyy
NEXT_PUBLIC_DEBUG=false
LOG_LEVEL=info

# -----------------------------------
# Analytics (OPTIONAL)
# -----------------------------------
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id

# -----------------------------------
# Cloud Storage - Cloudinary (OPTIONAL)
# -----------------------------------
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# -----------------------------------
# AWS S3 (OPTIONAL)
# -----------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# -----------------------------------
# Banking Integration - Plaid (OPTIONAL)
# -----------------------------------
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# -----------------------------------
# Banking Integration - Yodlee (OPTIONAL)
# -----------------------------------
YODLEE_API_KEY=your_yodlee_api_key
YODLEE_SECRET=your_yodlee_secret

# -----------------------------------
# Feature Flags
# -----------------------------------
NEXT_PUBLIC_ENABLE_AI_CATEGORIZATION=true
NEXT_PUBLIC_ENABLE_RECEIPT_UPLOAD=true
NEXT_PUBLIC_ENABLE_BUDGET_TRACKING=true
NEXT_PUBLIC_ENABLE_REPORTS=true
NEXT_PUBLIC_ENABLE_MULTICURRENCY=false

# ===================================
# NOTES:
# ===================================
# 1. Copy this file to .env.local and fill in your actual values
# 2. Never commit .env.local to version control
# 3. REQUIRED variables must be set for the app to work
# 4. OPTIONAL variables enable additional features
# 5. Generate secure random strings for secrets using:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

